{
  "agent": {
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    },
    "always_allow_tool_actions": true,
    "default_profile": "write",
    "model_parameters": [],
    "default_model": {
      "provider": "anthropic",
      "model": "claude-opus-4-latest"
    }
  },
  "file_scan_exclusions": [],
  "theme": "Kanagawa Wave",
  "buffer_font_family": "MesloLGS NF",
  "vim_mode": true,
  "buffer_font_size": 15,
  "file_scan_inclusions": ["**/.git"],
  "features": {
    "edit_prediction_provider": "none",
    "auto_complete": true
  },
  "terminal": {
    "font_family": "MesloLGS NF"
  },
  "lsp_highlight_debounce": 150,
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true
    }
  },
  "indent_guides": {
    "enabled": true
  },
  "languages": {
    "Python": {
      "indent_guides": {
        "enabled": true
      }
    }
  }
}
